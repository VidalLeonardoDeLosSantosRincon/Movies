@model AppMovies.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>

    .ctr-register{
        background:white;
        height:100vh;
        padding:25px;
        box-sizing:border-box;

        display:flex;
        justify-content:space-around;
        align-items:flex-start;
    }

    .ctr-register .register-logo{
        width:600px;
        height:460px;
    }
    .ctr-register form {
        background: white;
        width: 500px;
        height:auto;
        padding: 10px;
        box-sizing: border-box;
        box-shadow:2px 5px 10px rgba(0,0,0,0.2);
        border:1px solid rgba(0,0,0,0.2);
        border-radius:3px;
    }

        .ctr-register form .form-item{
            background:white;
            width:100%;
            height:50px;
            margin:5px;
            padding:5px;
            box-sizing:border-box;

            display:flex;
            justify-content:center;
        }

        .ctr-register form .form-item .fields{
            background: white;
            height:35px;
            border:2px solid dodgerblue;
            border-radius:3px;
            width:70%;
        }
        .ctr-register form .form-item label{
           background:white;
           width:30%;
           padding:5px;
           box-sizing:border-box;
           text-align:center;
        }

        .ctr-register form .form-item .back {
            border:2px solid dodgerblue;
            color:dodgerblue;
            text-align:center;
        }

        .ctr-register form h2,h4 {
            color:gray;
        }




</style>


<div class="ctr-register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()

    <h2>@ViewBag.Title.</h2>
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-item">
        @Html.LabelFor(m => m.Email, new { @class = "" })
        @Html.TextBoxFor(m => m.Email, new { @class = "fields" })
    </div>

    <div class="form-item">
        @Html.LabelFor(m => m.Password, new { @class = "" })
        @Html.PasswordFor(m => m.Password, new { @class = "fields" })
    </div>

    <div class="form-item">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "fields" })
    </div>

    <div class="form-item">
        <input type="submit" class="btn btn-primary" value="Register" />
        &nbsp;
        &nbsp;
        <a href="/Movies/" class="btn btn-default back">Go Back</a>
    </div>

    <div class="form-item">
        <a href="/Account/Login" >Do you have an account now?</a>
    </div>
    }

    <img src="~/Assets/Images/signin.png" class="register-logo" alt="Alternate Text" />
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
